<!DOCTYPE html>
<html>
	<head>
		<title>GameBuddy</title>
		<%= csrf_meta_tags %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<script src="https://use.fontawesome.com/16181c0ef9.js"></script>
	</head>
	<body>
		<header class="navbar navbar-default" role="navigation">
			<div class="navbar-inner">
				<div class="container">
					<div id="logo" class="navbar-brand"><%= link_to "GameBuddy", root_path %></div>
					<nav class="collapse navbar-collapse navbar-ex1-collapse">
						<!--Conditional stmt to show if user has signed in or not-->
						<%if user_signed_in?%>
						<ul class="nav navbar-nav navbar-right">
							<li><%= link_to 'Forums', forums_path %></li>
							<li><%= link_to 'Reviews', reviews_path %></li>
							<li><%= link_to 'News', news_index_path %></li>
							<li><%= link_to 'Account', edit_user_registration_path %></li>
							<li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
						</ul>
						<%else%>
						<ul class="nav navbar-nav pull-right">
							<li><%= link_to 'Forums', forums_path %></li>
							<li><%= link_to 'Reviews', reviews_path %></li>
							<li><%= link_to 'News', news_index_path %></li>
							<li><%= link_to 'Sign up', new_user_registration_path %></li>
							<li><%= link_to 'Sign in', new_user_session_path %></li>
						</ul>
						<%end%>
					</nav>
				</div>
			</div>
		</header>
		<div class="container">
			<!--Added flash msg-->
			<% flash.each do |name,msg| %>
			<!--Added alert class based on what type of alert it is-->
			<%= content_tag(:div, msg, class:"alert alert-#{name}") %>
			<% end %>
			<%= yield %>
			<!--FOOTER-->
			<footer class="footer-distributed">
				<div class="footer-left">
					<h3 style="color: #F05F40">GameBuddy</h3>
					<p class="footer-links">
						<a href="#">Home</a>
						·
						<a href="#">Reviews</a>
						·
						<a href="#">News</a>
						·
						<a href="#">About</a>
						·
						<a href="#">Faq</a>
						·
						<a href="#">Contact</a>
					</p>
					<p class="footer-company-name">GameBuddy &copy; 2017</p>
					<div class="footer-icons">
						<a href="#"><i class="fa fa-facebook"></i></a>
						<a href="#"><i class="fa fa-twitter"></i></a>
						<a href="#"><i class="fa fa-instagram"></i></a>
						<a href="#"><i class="fa fa-github"></i></a>
					</div>
				</div>
				<div class="footer-right">
					<p>Contact Us</p>
					<form action="#" method="post">
						<input type="text" name="email" placeholder="Email" />
						<textarea name="message" placeholder="Message"></textarea>
						<button>Send</button>
					</form>
				</div>
			</footer>
		</div>
	</body>
</html>